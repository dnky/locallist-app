// prisma/schema.prisma

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Tenant {
  id        String   @id @default(dbgenerated("gen_random_uuid()")) @db.Uuid
  name      String
  title     String?
  domain    String   @unique
  createdAt DateTime @default(now()) @db.Timestamptz
  ads       Ad[]
}

model Ad {
  id           String    @id @default(dbgenerated("gen_random_uuid()")) @db.Uuid
  tenantId     String    @db.Uuid
  businessName String
  description  String?
  imageSrc     String // This can now be a "cover image"
  logoSrc      String?
  phone        String?
  email        String?
  web          String?
  grid_w       Int
  grid_h       Int
  tags         String?
  lat          Float?
  lng          Float?
  createdAt    DateTime  @default(now()) @db.Timestamptz
  tenant       Tenant    @relation(fields: [tenantId], references: [id])
  images       Image[]   // <-- ADD RELATION TO IMAGES
}

// --- ADD THIS NEW MODEL ---
model Image {
  id        String   @id @default(dbgenerated("gen_random_uuid()")) @db.Uuid
  adId      String   @db.Uuid
  url       String   // The public URL of the image in Supabase Storage
  altText   String?  // Good for accessibility
  createdAt DateTime @default(now()) @db.Timestamptz
  ad        Ad       @relation(fields: [adId], references: [id])
}