// prisma/schema.prisma

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// --- ADD THIS ENUM ---
enum ListingType {
  BASIC
  PREMIUM
}

model Tenant {
  id        String   @id @default(dbgenerated("gen_random_uuid()")) @db.Uuid
  name      String
  title     String?
  domain    String   @unique
  createdAt DateTime @default(now()) @db.Timestamptz
  ads       Ad[]
}

model Ad {
  id           String    @id @default(dbgenerated("gen_random_uuid()")) @db.Uuid
  tenantId     String    @db.Uuid
  
  // --- ADD THIS FIELD ---
  type         ListingType @default(PREMIUM)
  
  businessName String
  description  String?
  imageSrc     String
  logoSrc      String?
  phone        String?
  email        String?
  web          String?
  grid_w       Int
  grid_h       Int
  tags         String?
  lat          Float?
  lng          Float?
  address      String?
  isActive     Boolean   @default(false)
  
  displayPhone Boolean   @default(true)
  displayEmail Boolean   @default(true)
  displayOnMap Boolean   @default(true)
  adminNotes   String?

  createdAt    DateTime  @default(now()) @db.Timestamptz
  tenant       Tenant    @relation(fields: [tenantId], references: [id])
  images       Image[]

  slug         String    @unique
}

model Image {
  id        String   @id @default(dbgenerated("gen_random_uuid()")) @db.Uuid
  adId      String   @db.Uuid
  url       String
  altText   String?
  createdAt DateTime @default(now()) @db.Timestamptz
  ad        Ad       @relation(fields: [adId], references: [id])
}